#include <stdio.h>
#include <stdlib.h>
#include <math.h>

Primeiro programa 

int main(){
	double  valor;
	printf("Digite o valor:\n" );
	scanf("%lf", &valor);
	double quadrado = pow(valor, 2);
	double cubo = pow(valor, 3);
	printf("O quadrado é : %.2lf\n", quadrado);
	printf("O quadrado é : %.2lf\n", cubo);

}

 Segundo programa 
int main(){
	double montante, principal, taxa, tempo;
	printf("Insira o valor do capital:\n ");
	scanf("%lf", &principal);
	printf("Insira a taxa dos juros:\n ");
	scanf("%lf", &taxa);
	printf("Insira o tempo :\n ");
	scanf("%lf", &tempo);
	 montante = principal * pow((1 + taxa / 100), tempo);
	printf("O montante e : %.2lf \n ", montante);
}


